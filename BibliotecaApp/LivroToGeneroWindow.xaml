<Window x:Class="BibliotecaApp.LivroToGeneroWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BibliotecaApp"
        mc:Ignorable="d"
        Title="Atribuir livro a gênero" Height="270" Width="400">
    <Grid>
        <ListBox Name="listLivros" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,10,0,0" Width="370" Height="90"/>
        <ListBox Name="listGenero" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,110,0,0" Width="370" Height="90"/>
        <Button Content="Listar" HorizontalAlignment="Left" Margin="10,205,0,0" VerticalAlignment="Top"/>
        <Button Content="Atribuir" HorizontalAlignment="Left" Margin="47,205,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
